        <div class="jumbotron vertical-center">
            <div class="container">
                <div class="row-fulid">
                    <h1 align="center">Atualizar Categoria</h1>

                    <form class="form-signin" method="post" action="/Categoria/Atualiza">
                        <label for="nome_id">Nome</label><br />
                        <input class="form-control" id="nome_id" type="text" name="nome" align="center" maxlength="40" value="@ViewBag.Categorias.Nome" required /><br />

                        <label for="nome_id">Descrição</label><br />
                        <input class="form-control" id="email_id" type="text" name="desc" align="center" maxlength="40" value="@ViewBag.Categorias.Desc" required /><br />

                        <input type="hidden" name="id" value="@ViewBag.Categorias.Id">

                        <input class="btn btn-lg btn-block" style="background-color: #4800ff; color: white;" id="botao_id" type="submit" value="Enviar" />
                        <input class="btn btn-lg btn-block" style="background-color: #4800ff; color: white;" id="limpar" type="reset" value="Limpar" />
                    </form>
                </div>
            </div>
        </div>
        <script src="http://code.jquery.com/jquery-latest.js"></script>
        <script src="assets/js/bootstrap.min.js"></script>
